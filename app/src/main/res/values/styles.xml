<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog_No_Border">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog_No_BG">
        <item name="android:background">@drawable/bg_dialog_3</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/bg_dialog_3</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="settings_tabs">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="settings_tabs_on"  parent="settings_tabs">
        <item name="android:textColor">@color/settings_tabs_on</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="settings_tabs_off" parent="settings_tabs">
        <item name="android:textColor">@color/settings_tabs_off</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="factory_tabs">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="factory_tabs_on" parent="factory_tabs">
        <item name="android:textColor">@color/factory_tabs_on</item>
        <item name="android:textSize">14pt</item>
    </style>

    <style name="factory_tabs_off" parent="factory_tabs">
        <item name="android:textColor">@color/factory_tabs_off</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="vr_item_text">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/workout_mode_white</item>
    </style>

</resources>
