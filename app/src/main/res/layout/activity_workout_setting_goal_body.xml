<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_option_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/workout_mode_goal_time"
        android:layout_width="238dp"
        android:layout_height="240dp"
        android:background="@drawable/btn_workout_goal_time"
        android:gravity="center"
        android:text="@string/value_nothing"
        android:textColor="@color/workout_mode_white"
        android:textSize="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workout_mode_goal_distance"
        android:layout_width="238dp"
        android:layout_height="240dp"
        android:background="@drawable/btn_workout_goal_distance_km"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/value_nothing"
        android:textColor="@color/workout_mode_white"
        android:textSize="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workout_mode_goal_calories"
        android:layout_width="238dp"
        android:layout_height="240dp"
        android:background="@drawable/btn_workout_goal_calories"
        android:gravity="center"
        android:text="@string/value_nothing"
        android:textColor="@color/workout_mode_white"
        android:textSize="30pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workout_setting_hint"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:text="@string/workout_mode_hint_a"
        android:textColor="@color/workout_mode_white"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/workout_mode_goal_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_mode_goal_time" />

    <ImageView
        android:id="@+id/workout_setting_start"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/btn_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_mode_goal_distance" />

</android.support.constraint.ConstraintLayout>
