<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gender_bg"
    android:layout_width="450dp"
    android:layout_height="500dp"
    android:background="@mipmap/img_gender_frame_1">

    <ImageView
        android:id="@+id/gender_img"
        android:layout_width="347dp"
        android:layout_height="367dp"
        android:layout_gravity="center"
        android:src="@mipmap/img_gender_draw_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <RadioButton
        android:id="@+id/gender_male"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/btn_workout_male"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_img" />

    <RadioButton
        android:id="@+id/gender_female"
        android:layout_width="171dp"
        android:layout_height="70dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/btn_workout_female"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_img" />
</android.support.constraint.ConstraintLayout>
