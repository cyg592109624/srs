<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="27dp">

    <TextView
        android:id="@+id/workout_head_mode"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/workout_mode_white"
        android:textSize="18pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/workout_head_icon"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/workout_head_mode"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workout_head_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/workout_mode_white"
        android:textSize="14pt"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_head_mode" />

</android.support.constraint.ConstraintLayout>
